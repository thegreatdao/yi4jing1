<?xml version="1.0" encoding="utf-8"?>
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/cast_iching"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:stretchColumns="1">
  	<TableRow>
  		<LinearLayout
	  		android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:orientation="vertical">
	  		<ImageView
				android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:src="@drawable/yin"
	  			android:layout_marginTop="3dip"
	  			android:layout_marginBottom="3dip"/>
	  			/>
	  		<ImageView
				android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:src="@drawable/yang"
	  			/>
	  		<ImageView
				android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:src="@drawable/yin"
	  			android:layout_marginTop="3dip"
	  			android:layout_marginBottom="3dip"/>
	  			/>
	  		<ImageView
				android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:src="@drawable/yin"
	  			/>
	  		<ImageView
				android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:src="@drawable/yin"
	  			android:layout_marginTop="3dip"
	  			android:layout_marginBottom="3dip"/>
	  			/>
	  		<ImageView
				android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:src="@drawable/yin"
	  			/>
  		</LinearLayout>
  		<LinearLayout
	  		android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:orientation="vertical">
	  		<ImageView
				android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:src="@drawable/yin"
	  			android:layout_marginTop="3dip"
	  			android:layout_marginBottom="3dip"/>
	  			/>
	  		<ImageView
				android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:src="@drawable/yang"
	  			/>
	  		<ImageView
				android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:src="@drawable/yin"
	  			android:layout_marginTop="3dip"
	  			android:layout_marginBottom="3dip"/>
	  			/>
	  		<ImageView
				android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:src="@drawable/yin"
	  			/>
	  		<ImageView
				android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:src="@drawable/yin"
	  			android:layout_marginTop="3dip"
	  			android:layout_marginBottom="3dip"/>
	  			/>
	  		<ImageView
				android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:src="@drawable/yin"
	  			/>
  		</LinearLayout>
  	</TableRow>
  	<TableRow>
		<LinearLayout
	  		android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:orientation="horizontal">
  			<ImageView
				android:id="@+id/first_coin"
				android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:src="@drawable/default_coin"/>
			<ImageView
				android:id="@+id/second_coin"
				android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:src="@drawable/manwen"
	  			android:paddingLeft="6dip"
	  			android:paddingRight="6dip"/>
			<ImageView
				android:id="@+id/third_coin"
				android:layout_width="wrap_content"
	  			android:layout_height="wrap_content"
	  			android:src="@drawable/hanwen"/>
  			<Button
	  		  android:id="@+id/test"
		      android:text="Cast"
		      android:layout_height="30dip"
		      android:layout_width="100dip"
		      style="@style/castIChingButton"/>
	  	</LinearLayout>
  	</TableRow>
</TableLayout>
