<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="textWrapper">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="ichingButton" parent="textWrapper">
		<item name="android:background">@drawable/button</item>
		<item name="android:textColor">@color/default_color</item>
		<item name="android:textSize">14sp</item>
		<item name="android:layout_margin">3dip</item>
		<item name="android:paddingTop">11dip</item>
		<item name="android:paddingBottom">11dip</item>
	</style>
	
	<style name="castIChingButton" parent="textWrapper">
		<item name="android:background">@drawable/button</item>
		<item name="android:textColor">@color/default_color</item>
		<item name="android:textSize">10sp</item>
		<item name="android:layout_marginLeft">10dip</item>
		<item name="android:paddingTop">6dip</item>
		<item name="android:paddingBottom">6dip</item>
	</style>
	
    <style name="mainTitle" parent="textWrapper">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">20dip</item>
        <item name="android:textColor">@color/default_color</item>
    </style>
	
    <style name="about">
        <item name="android:textColor">@color/default_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
    </style>
    
    <style name="alertDialogCustom" parent="@android:style/Theme.Dialog.Alert">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fullDark">@drawable/button_normal</item>
	    <item name="android:topDark">@drawable/button_pressed</item>
	    <item name="android:centerDark">@drawable/button_selected</item>
	    <item name="android:bottomDark">@drawable/list_item_pressed</item>
    </style>
    
    <style name="instruction">
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="originalHexagramTitle">
        <item name="android:textColor">#FF3300</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="relatingHexagramTitle" parent="originalHexagramTitle">
        <item name="android:textColor">#0033CC</item>
    </style>
</resources>